/* pages/state/state.wxss */
page {
  width: 100%;
  height: 100%;
}
.hide {
  display: none!important;
}
.state {
  width: 100%;
  height: auto;
  min-height: 100%;
}
.state .header {
  width: 100%;
  height: 400rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.state .header .v-img {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  box-shadow: 0 0 20rpx #ddd;
  margin-bottom: 20rpx;
}
.state .header .version-name {
  color: #444;
}
.state .header .v-name {
  font-size: 36rpx;
  margin-right: 15rpx;
}
.state .header .v-version {
  font-size: 28rpx;
}

.state .content {
  width: 100%;
  height: auto;
  box-sizing: border-box;
}
.state .content .cont-li {
  width: 95%;
  box-shadow: 0 0 5rpx #ddd;
  margin: 0 auto 20rpx;
  background: #fff;
}
.state .content .title {
  display: flex;
  align-items: center;
  padding: 20rpx;
  box-sizing: border-box;
  justify-content: space-between;
  font-size: 36rpx;
  border: 1rpx solid #ddd;
  border-left: none;
  border-right: none;
}
.state .content .title .arrow-right {
  width: 40rpx;
  height: 40rpx;
  transition: all .5s ease;
  transform: rotate(0deg);
}
.state .content .title .arrow-right-act {
  transition: all .5s ease;
  transform: rotate(90deg);
}
.state .content .cont {
  font-size: 26rpx;
  color: #444;
  line-height: 1.5;
  padding: 20rpx;
  box-sizing: border-box;
}

.state .content .intro1-title {
  font-size: 32rpx;
  display: block;
  margin: 10rpx 0 16rpx;
}
.state .content .intro2 {
  margin: 20rpx 0;
}
.state .content .contList {
  margin-bottom: 20rpx;
}
.state .content .cont-list-title {
  font-size: 32rpx;
}