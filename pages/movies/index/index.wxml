<!--pages/movies/movies.wxml-->
<view class='container-movies'>
  <!-- 轮播图 -->
  <view class='movies-header'>
    <swiper indicator-dots="{{indicatorDots}}" 
    autoplay='{{autoplay}}' 
    interval="{{interval}}" 
    duration="{{duration}}"
    circular="{{circular}}">
      <block wx:for="{{imgUrls}}">
        <swiper-item>
          <image src='{{item}}' class='back-image' mode="aspectFill"></image>
          <image src='{{item}}' class='slide-image'></image>
          <view class='movie-intro'>
            <view>名字：{{swiTitle[index]}}</view>
            <view class='swiAvra'>评分：{{swiAvra[index]}}</view>
            <view>上映日期：{{swiYear[index]}}</view>
          </view>
        </swiper-item>
      </block>
    </swiper>
  </view>
  <!-- search -->
  <view class='movie-search'>
    <input type='text' class='search-input' bindinput='inputSearch'
    placeholder='请输入要搜索的内容...'
    ></input>
    <button type='primary' size='mini' class='search-button' bindtap='getSearch'>搜索</button>
  </view>
  <!-- 电影 -->
  <view class='movies-content'>
    <view class='movies-item' wx:for="{{moviesType}}">
      <view class='title' bindtap='toMovie' data-id="{{item.id}}">
        <text>{{item.title}}</text>
        <image src='{{arrowrightImg}}' mode='aspectFill'></image>
      </view>
      <scroll-view class='movies-content' scroll-x>
        <view class='inner'>
          <navigator wx:for="{{item.cont}}" wx:for-item="itemNext" wx:key="id" url='../item/item?id={{itemNext.id}}'>
            <view class='movie-item'>
              <image src="{{itemNext.images.medium}}" mode="aspectFill" />
              <text>{{itemNext.title}}</text>
            </view>
          </navigator>
        </view>
      </scroll-view>
    </view>
  </view>
</view>