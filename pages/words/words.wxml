<!--index.wxml-->
<view class='words'>
  <view class='title'>{{title}}</view>
  <view class='author' hidden="{{isAllShow}}">
    <text>作者：{{author}}</text>
    <text class='time'>{{showTime}}</text>
  </view>
  
  <!-- <view>{{wc}}</view> -->
  <text class='content'>{{content}}</text>
  <view class='time-choice' hidden="{{isAllShow}}">
    <text bindtap='clickTime' data-time="prev">上一天</text>
    <text bindtap='clickTime' data-time="next">下一天</text>
  </view>
</view>