.avengers-header swiper {
  height: 480rpx;
}

.avengers-header swiper image {
  height: 100%;
  width: 100%;
}

.avengers-header swiper .back-image {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  height: 100%;
  width: 100%;
  z-index: -1000;
  opacity: 0.4;
}

.avengers-header swiper .movie-intro {
  position: fixed;
  top: 80rpx;
  right: 10rpx;
  height: auto;
  width: 300rpx;
  z-index: 123;
  opacity: 0.5;
  color: #000;
  font-size: 28rpx;
}
.avengers-header swiper .movie-intro .swiAvra{
  margin: 30rpx 0;
}

.avengers-header swiper .slide-image {
  width: 324rpx;
  height: 100%;
  display: block;
  margin: 0 auto;
}
