.avengers-list {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avengers-list .item {
  display: flex;
  padding: 20rpx 20rpx;
  width: 95%;
  box-sizing: border-box;
  border-radius: 10rpx;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.2);
  background: #fff;
  margin-bottom: 20rpx;
}
.avengers-list .time {
  margin: 20rpx 0;
  font-size: 40rpx;
}

.avengers-list .item .poster {
  width: 128rpx;
  height: 168rpx;
  margin-right: 20rpx;
}

.avengers-list .item .meta {
  flex: 1;
}

.avengers-list .item .meta .title, .avengers-list .item .meta .sub-title {
  display: block;
  margin-bottom: 20rpx;
}

.avengers-list .item .meta .title {
  font-size: 32rpx;
}

.avengers-list .item .meta .sub-title {
  font-size: 22rpx;
  color: #c0c0c0;
}

.avengers-list .item .meta .artists {
  font-size: 24rpx;
  color: #999;
}

.avengers-list .item .rating text {
  display: inline-block;
  width: 40rpx;
  font-size: 28rpx;
  font-weight: bold;
  text-align: center;
  color: rgba(247, 76, 49, 0.8);
  padding: 10rpx;
  border-radius: 20rpx;
}