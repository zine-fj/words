/* pages/colors/colors.wxss */
page {
  width: 100%;
  height: 100%;
}
.color {
  width: 100%;
  height: 100%;
  position: fixed;
  overflow: hidden;
}

.color-logo {
  width: 55rpx;
  height: 479rpx;
  position: absolute;
  right: 50rpx;
  top: 50rpx;
}
.color-words {
  position: absolute;
  right: 150rpx;
  width: 50rpx;
  word-wrap: break-word; 
  top: 100rpx;
  font-family: 'KaiTi';
  font-size: 60rpx;
  color: #fff;
}
.math-words {
  position: absolute;
  left: 50rpx;
  bottom: 50rpx;
  color: #fff;
  background: rgba(0,0,0,.2);
  font-size: 24rpx;
  width: 40rpx;
  word-wrap: break-word; 
  box-sizing: border-box;
  text-align: center;
  padding: 10rpx 0;
}
/* 诗句 */
.poetry {
  position: absolute;
  left: 40%;
  top: 20%;
  width: 20%;
  height: 50%;
  font-size: 38rpx;
  color: #fff;
  display: flex;
  justify-content: space-around;
  align-items: center;
  opacity: 0;
}

.poetry text {
  display: inline-block;
  width: 32rpx;
  height: auto;
  box-sizing: border-box;
  color: #fff;
}

/* 收藏 */
.collection {
  position: absolute;
  right: 60rpx;
  top: 572rpx;
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  transform: rotate(45deg);
  background: #fff;
}
.collection-act{
  background: #f00;
}

.collection:after, .collection:before {
  content: '';
  width: inherit;
  height: inherit;
  background: inherit;
  border-radius: 50%;
  -webkit-border-radius: 50%;
  -moz-border-radius: 50%;
  position: fixed;
}

.collection:after {
  top: -10px;
}

.collection:before {
  left: -10px;
}