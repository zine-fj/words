
.click-love {
  width: 100%;
  height: 100%;
  position: relative;
}

.love {
  display: inline-block;
  width: 20rpx;
  height: 20rpx;
  z-index: 100;
}

.love:after, .love:before {
  content: '';
  width: inherit;
  height: inherit;
  background: inherit;
  border-radius: 50%;
  -webkit-border-radius: 50%;
  -moz-border-radius: 50%;
  position: fixed;
}
.love:after {
  top: -5px;
}
.love:before {
  left: -5px;
}

